<?xml version="1.0" encoding="utf-8"?>
<filter-conf>
    <version>2021110817</version>
    <filter-name>sys_app_switch_config</filter-name>

    <!-- monitor all package change notification start -->
    <matchAppDefault>com.coloros.appswitch.all</matchAppDefault>
    <matchAppDefault>com.nearme.statistics.rom</matchAppDefault>
    <matchAppDefault>com.coloros.colorfilestand</matchAppDefault>
    <matchAppDefault>android</matchAppDefault>

    <!-- add for remove oppo related keywords-->
    <matchAppDefault>com.oplus.deepthinker</matchAppDefault>
    <matchAppDefault>com.oplus.safecenter</matchAppDefault>
    <matchAppDefault>com.oplus.securitypermission</matchAppDefault>
    <matchAppDefault>com.oplus.onetrace</matchAppDefault>
    <matchAppDefault>com.oplus.obrain</matchAppDefault>
    <matchAppDefault>com.oplus.battery</matchAppDefault>
    <matchAppDefault>com.oplus.exserviceui</matchAppDefault>
    <matchAppDefault>com.oplus.athena</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.themismonitor</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.memleakmonitor</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.performance</matchAppDefault>
    <matchAppDefault>com.oplus.statistics.rom</matchAppDefault>
    <!-- monitor all package change notification end -->

    <!-- monitor all Activity change notification start -->
    <matchActivityDefault>com.coloros.appswitch.all</matchActivityDefault>
    <!-- monitor all Activity change notification end -->

    <!-- Broadcast notification start-->
    <rule>
        <pkg>com.coloros.osecret</pkg>
         <config>
            <type>2</type>
                <name>com.android.packageinstaller</name>
                <name>com.coloros.gamespace</name>
                <name>com.oplus.cosa</name>
                <name>com.oneplus.backuprestore</name>
                <name>com.google.android.packageinstaller</name>
                <name>com.nearme.gamecenter</name>
        </config>
    </rule>
    <!-- Broadcast notification end-->
</filter-conf>

